<%- actions({ 'Add ingredient type' => url(:ingredient_type, :new) }) %>

<table class="table">
    <thead>
    <th>
        Title
    </th>
    <th>
        Action
    </th>
    </thead>
    <tbody>
    <% @items.each do |ingredient_type| %>
        <tr>
            <td>
                <%= link_to ingredient_type.title, url(:ingredient_type, :edit, id: ingredient_type.id) %>
            </td>
            <td>
                <%= link_to 'Delete ingredient type', url(:ingredient_type, :destroy, :id => ingredient_type.id), :method => :delete, :class => 'btn btn-danger btn-xs', :confirm => 'Do you really want to delete this ingredient type?' %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>

