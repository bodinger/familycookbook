<%- actions2(plus_link('Add ingredient type', :href => url(:ingredient_type, :new), :class => 'btn btn-success')) %>

<%= render_partial 'shared/pagination', :object => @pagination, :locals => { :action => :index } %>

<table class="table">
    <thead>
    <th>
        Title
    </th>
    <th>
        Color code
    </th>
    <th>
        Action
    </th>
    </thead>
    <tbody>
    <% @items.each do |ingredient_type| %>
        <tr>
            <td>
                <%= link_to ingredient_type.title, url(:ingredient_type, :edit, id: ingredient_type.id) %>
            </td>
            <td class="shopping-list-item-<%= ingredient_type.color_code %>">
                <%= ingredient_type.color_code %>
            </td>
            <td>
                <%= remove_link('Delete ingredient type', :href => url(:ingredient_type, :destroy, :id => ingredient_type.id), :method => :delete, :class => 'btn btn-danger btn-xs', :confirm => 'Do you really want to delete this ingredient type?') %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>

