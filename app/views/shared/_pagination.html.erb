<div class="clearfix">
  <div class="row">
      <div class="lg-col-3 pull-left" style="width: 160px;">
          <%- if @pagination.first && @pagination.page_number != 1 %>
            <%= first_link('Erste', :href => "#{request.path.chomp('/')}?page=#{@pagination.first}", :class => 'btn btn-default btn-sm') %>
          <% end %>
          <%- if @pagination.previous && @pagination.page_number != 1 %>
            <%= previous_link('Vorherige', :href => "#{request.path.chomp('/')}?page=#{@pagination.previous}", :class => 'btn btn-default btn-sm') %>
          <% end %>
          <br/>
      </div>
      <div class="lg-col-3 pull-right" style="width: 160px;">
          <%- if @pagination.next && @pagination.page_number != @pagination.last %>
            <%= next_link('NÃ¤chste', :href => "#{request.path.chomp('/')}?page=#{@pagination.next}", :class => 'btn btn-default btn-sm') %>
          <% end %>
          <%- if @pagination.last && @pagination.page_number != @pagination.last %>
            <%= last_link('Letzte', :href => "#{request.path.chomp('/')}?page=#{@pagination.last}", :class => 'btn btn-default btn-sm') %>
          <% end %>
          <br/>
      </div>
      <div class="text-center lg-col-6"><strong>Seite <%= @pagination.page_number %> von <%= @pagination.last %></strong></div>
  </div>
</div>
