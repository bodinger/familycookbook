<%- f = form_fields %>

<%= error_messages { f.error_messages } %>
<%= f.hidden_field(:anchor) %>

<%= form_group(f, :name) %>
<%= form_group(f, :description) %>

<div class="form-group">
  <label class="col-sm-2" for="menu-datepicker">Start / End date: </label>
  <div class="col-sm-9">
    <div class="input-group date col-lg-2 pull-left" id="daterangepicker-left">
      <input type='text' class="form-control" name="mtmd_family_cook_book_menu[range_begin]" />
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>

    <div class="input-group date col-lg-2" id="daterangepicker-right">
      <input type='text' class="form-control" name="mtmd_family_cook_book_menu[range_end]" />
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>
</div>
