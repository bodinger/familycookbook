<%- actions({ 'Add recipe' => url(:recipe, :new) }) %>

<table class="table">
    <thead>
    <th>
        Title
    </th>
    <th>
        Anzahl Zutaten
    </th>
    </thead>
    <tbody>
    <% @items.each do |recipe| %>
        <tr>
            <td>
                <%= link_to recipe.title, url(:recipe, :show, id: recipe.id) %>
            </td>
            <td>
                <%= recipe.ingredients.size %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>

