<%- actions2([
  remove_link('Cancel', :href => url(:recipe, :index), :class => 'btn btn-danger'),
  '&nbsp;'.html_safe,
  checked_link('Create', :href => '#', :id => 'recipe-form-'+@recipe.id.to_s+'-button', :class => 'btn btn-success')
]) %>

<%- form_for :recipe, url(:recipe, :create), :method => :post, :class => 'form-horizontal', :id => 'recipe' do |f| %>
  <%= render_partial 'recipe/form_fields', :object => f %>
  <%= f.submit 'Create', :class => 'btn btn-primary hidden', :id => 'recipe-form-'+@recipe.id.to_s+'-submit' %>
<% end %>

<%= render_partial 'shared/js_bind_submit', :locals => { :object => @recipe, :object_name => 'recipe', :action => :new } %>
